<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Anime Image -->
    <ImageView
        android:id="@+id/imageViewAnime"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:contentDescription="Anime Image"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

    <!-- Number of Episodes -->
    <TextView
        android:id="@+id/textViewEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes: N/A"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <!-- Rating -->
    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: N/A"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <!-- Watch Trailer Button -->
    <Button
        android:id="@+id/btnWatchTrailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Trailer"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:backgroundTint="@color/material_dynamic_neutral10"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>
